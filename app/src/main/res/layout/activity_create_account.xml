<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.n.myfirstapplication.CreateAccount">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/field_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="41dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/field_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/field_name"
            android:layout_alignStart="@+id/field_name"
            android:layout_below="@+id/field_name"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/field_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/field_email"
            android:layout_alignStart="@+id/field_email"
            android:layout_below="@+id/field_email"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/field_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/field_phone"
            android:layout_alignLeft="@+id/field_phone"
            android:layout_alignStart="@+id/field_phone" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/field_name"
            android:layout_alignBottom="@+id/field_name"
            android:layout_toLeftOf="@+id/field_name"
            android:layout_toStartOf="@+id/field_name"
            android:text="Name:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/field_email"
            android:layout_alignBottom="@+id/field_email"
            android:layout_toLeftOf="@+id/field_email"
            android:layout_toStartOf="@+id/field_email"
            android:text="E-mail:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/field_phone"
            android:layout_alignBottom="@+id/field_phone"
            android:layout_toLeftOf="@+id/field_phone"
            android:layout_toStartOf="@+id/field_phone"
            android:text="Phone:" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/field_password"
            android:layout_alignBottom="@+id/field_password"
            android:layout_toLeftOf="@+id/field_password"
            android:layout_toStartOf="@+id/field_password"
            android:text="Password:" />

        <Button
            android:id="@+id/createBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/field_password"
            android:layout_alignRight="@+id/field_password"
            android:layout_below="@+id/field_password"
            android:layout_marginTop="40dp"
            android:text="Create" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/createBtn"
            android:layout_alignBottom="@+id/createBtn"
            android:layout_alignLeft="@+id/field_password"
            android:layout_alignStart="@+id/field_password"
            android:text="Cancel" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
