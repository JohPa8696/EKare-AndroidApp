<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.n.myfirstapplication.Authentication">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="7dp">

        <Button
            android:id="@+id/LoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/field_password"
            android:layout_alignRight="@+id/field_password"
            android:layout_below="@+id/field_email"
            android:layout_marginTop="62dp"
            android:text="Login" />

        <EditText
            android:id="@+id/field_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/field_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/field_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/field_email"
            android:layout_alignStart="@+id/field_email"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/SignupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/LoginBtn"
            android:layout_alignBottom="@+id/LoginBtn"
            android:layout_alignLeft="@+id/field_password"
            android:layout_alignStart="@+id/field_password"
            android:text="Signup" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:layout_alignBaseline="@+id/field_email"
            android:layout_alignBottom="@+id/field_email"
            android:layout_toLeftOf="@+id/field_email"
            android:layout_toStartOf="@+id/field_email" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/field_password"
            android:layout_toStartOf="@+id/field_password" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
