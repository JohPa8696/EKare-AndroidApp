<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.n.myfirstapplication.Authentication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter_vintage_black_24dp"
                android:maxWidth="200dp"
                android:maxHeight="200dp">

            </ImageView>

            <TextView
                android:id="@+id/logoname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:fadingEdge="horizontal|vertical"
                android:text="EKare"
                android:textColor="@color/white"
                android:textSize="22dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/field_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_above="@+id/field_password"
                android:background="@drawable/edittext_border"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:hint="@string/enter_an_email"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginTop="30dp"
                android:inputType="textEmailAddress"
                android:ems="13"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"/>

            <EditText
                android:id="@+id/field_password"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_border"
                android:ems="13"
                android:hint="@string/enter_password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/white"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <CheckBox
                    android:id="@+id/remember_login_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Keep me login"
                    android:textSize="14dp"
                    android:textColor="@color/cbgray"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="60dp"
                    >
                </CheckBox>
                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Forgot password?"
                    android:textColor="@color/cbgray"
                    android:layout_marginLeft="10dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/LoginBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ripple_effect_login"
                        android:ems="8"
                        android:text="Login"
                        android:textColor="@color/white"
                        android:layout_marginTop="15dp"
                        android:textSize="15dp"
                        android:layout_marginRight="1dp"
                        android:onClick="check"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/SignupBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Register"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/ripple_effect_signup"
                        android:ems="8"
                        android:layout_marginLeft="1dp"
                        android:textSize="15dp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
