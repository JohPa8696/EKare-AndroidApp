<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <!--Profile picture takes 10% of the screen-->
    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.15">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/profilepicmessage_r_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#41423f"
            android:background="@drawable/default_profilepic" />
    </RelativeLayout>
    <!--The message_reciever,image and time take total 90% of the screen-->
    <RelativeLayout
        android:id="@+id/message_layout"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.85">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/accidentscene_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/message_r_tv"
                        android:text="helo how are you asdf asdf as dfasd asdfas asdf sad fasdfasdf asdfasdfasdfa sdfa sdfas asdfasdf asdfa"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:textColor="#000000"
                        android:background="@drawable/chatbubble_receiver"
                        android:textSize="15dp"
                        android:maxWidth="300dp"
                        android:layout_alignParentLeft="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <TextView
                        android:id="@+id/timestamp_r_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jun 18\n10:30 PM"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="2dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#a9aaa5"
                        android:textSize="12dp"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>